---
pageable: true
per_page: 10
---
<% if paginate && num_pages > 1 %>
  <p class="page-number">Page <%= page_number %> of <%= num_pages %></p>

  <% if paginate %>
    <ul class="pagenations">
    <% if next_page %>
      <li class="old-page"><%= link_to 'Old entry', next_page %></li>
    <% end %>
    <% if prev_page %>
      <li class="new-page"><%= link_to 'New entry', prev_page %></li>
    <% end %>
    </ul>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <article class="entry">
    <h2><%= link_to article.title, article %></h2>
    <ul>
      <li class="date">
        <%= article.date.strftime('%Y.%m.%d') %>
      </li>
    </ul>
    <ul class="external-link">
      <li>
        <a class="twitter-share-button"
          href="https://twitter.com/share"
          data-url="http://hiropo.co.uk<%= article.url %>"
          data-via="funnythingz"
          data-text="<%= article.title %>">
          Tweet
        </a>
